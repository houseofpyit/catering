<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hop_category_view_form" model="ir.ui.view">
        <field name="name">hop.category.view.form</field>
        <field name="model">hop.category</field>
        <field name="arch" type="xml">
            <form string="Category">
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="convert_name" />
                            <field name="gujarati" force_save="1"/>
                            <field name="hindi" force_save="1"/>
                            <!-- <button name="button_create" string="ok" type="object"/> -->
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="hop_category_view_tree" model="ir.ui.view">
        <field name="name">hop.category.view.tree</field>
        <field name="model">hop.category</field>
        <field name="arch" type="xml">
            <tree string="category">
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="hop_category_action" model="ir.actions.act_window">
        <field name="name">category</field>
        <field name="res_model">hop.category</field>
        <field name="view_mode">tree,form</field>
    </record>

    
   
</odoo>
