    <record id="action_vender" model="ir.actions.act_window">
        <field name="name">Vender</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('is_vender', '=', True)]</field>
        <field name="context">{'default_is_vender': True,'default_is_company': True}</field>
    </record>

    <record id="contacts.action_contacts" model="ir.actions.act_window">
        <field name="name">Customer</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form,activity</field>
        <field name="search_view_id" ref="base.view_res_partner_filter"/>
        <field name="context">{'default_is_company': True,'default_is_customer': True,'default_l10n_in_gst_treatment': 'consumer'}</field>
        <field name="domain">[('is_customer', '=', True)]</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a Contact in your address book
          </p><p>
            Odoo helps you track all activities related to your contacts.
          </p>
        </field>
    </record>


    <record id="sms.res_partner_act_window_sms_composer_multi" model="ir.actions.act_window">
