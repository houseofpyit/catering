<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="inherit_res_partner_view" model="ir.ui.view">
        <field name="name">res.partner.view.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <!-- <xpath expr="//field[@name='name']" position="after">
                <group>
                    <div name="options" >
                        <span class="d-inline-block">
                            <field name="is_vender"/>
                            <label for="is_vender"/>
                        </span>
                        <span class="d-inline-block">
                            <field name="is_customer"/>
                            <label for="is_customer"/>
                        </span>
                    </div>
                </group>
            </xpath> -->
            
            <xpath expr="//div[@class='oe_title mb24']" position="after">
            <group>
                <group>
                    <field name="convert_name" />
                    <field name="gujarati" force_save="1"/>
                    <field name="hindi" force_save="1"/>
                </group>
                <group></group>
                </group>
            </xpath>
            <xpath expr="//field[@name='vat']" position="replace">
                <field name="vat" string="GST Tax" required="0"/>
            </xpath>
            <xpath expr="//field[@name='vat']" position="after">
                <field name="is_vender"/>
                <field name="is_customer"/>
            </xpath>
            <xpath expr="//field[@name='phone']" position="replace">
                <field name="phone" required="True" placeholder="Phone"/>
            </xpath>
            <xpath expr="//field[@name='email']" position="replace">
                <field name="email" placeholder="Email"/>
            </xpath> 
            
            <xpath expr="//field[@name='category_id']" position="attributes">
                <field name="category_id" string="Tag"/>
            </xpath>
            <xpath expr="//field[@name='bank_ids']" position="attributes">
                <attribute name="options">{'no_quick_create': True}</attribute>
            </xpath>
            <xpath expr="//tree/field[@name='bank_id']" position="attributes">
                <attribute name="options">{'no_quick_create': True}</attribute>
            </xpath>
            <xpath expr="//field[@name='category_id']" position="after">
                <field name="ct_category_id" options="{'no_quick_create': True}" attrs="{'invisible': [('is_vender','!=',True)],'required': [('is_vender','=',True)]}"/>
                <field name="date_of_birth"/>
                <field name="date_of_marriage"/>  
                <field name="cost" />
            </xpath>
           <!-- <xpath expr="//field[@name='ct_category_id']" position="attributes">
                <attribute name="attrs"></attribute>                
            </xpath> -->
            
            <xpath expr="//field[@name='parent_id']" position="attributes">
                <attribute name="attrs">{'invisible': 1}</attribute>
            </xpath>
            <xpath expr="//field[@name='company_type']" position="attributes">
                <attribute name="attrs">{'invisible': 1}</attribute>
            </xpath>
            <xpath expr="//field[@name='type']" position="attributes">
                <attribute name="attrs">{'invisible': 1}</attribute>
            </xpath>
            <xpath expr="//field[@name='function']" position="attributes">
                <attribute name="attrs">{'invisible': 1}</attribute>
            </xpath>
            <xpath expr="//field[@name='title']" position="attributes">
                <attribute name="attrs">{'invisible': 1}</attribute>
            </xpath>
            <xpath expr="//field[@name='website']" position="attributes">
                <attribute name="attrs">{'invisible': 1}</attribute>
            </xpath>
            <xpath expr="//notebook/page[@name='contact_addresses']" position="attributes">
                <attribute name="attrs">{'invisible': 1}</attribute>
            </xpath>
            <xpath expr="//notebook/page[@name='sales_purchases']" position="attributes">
                <attribute name="attrs">{'invisible': 1}</attribute>
            </xpath> 
            <xpath expr="//field[@name='category_id']" position="attributes">
                <attribute name="string">Reference</attribute>
            </xpath>
            <xpath expr="//span[@class='o_form_label o_td_label']" position="replace">
                <span class="o_form_label o_td_label" name="address_name">
                    <field name="type" attrs="{'invisible': [('is_company','=', True)], 'required': [('is_company','!=', True)], 'readonly': [('user_ids', '!=', [])]}" class="font-weight-bold"/>
                    <b attrs="{'invisible': [('is_company', '=', False)]}">Address-1</b>
                </span>
            </xpath> 
            <xpath expr="//div[@class='o_address_format']" position="replace">
                <div class="o_address_format">
                    <field name="street" placeholder="Street..." class="o_address_street" />
                    <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                    <field name="city" placeholder="City" class="o_address_city" />
                    <field name="state_id" class="o_address_state" placeholder="State" />
                    <field name="zip" placeholder="ZIP" class="o_address_zip" />
                    <field name="country_id" placeholder="Country" class="o_address_country" />
                </div>
                <span class="o_form_label o_td_label" name="c_address_name">
                    <field name="type" attrs="{'invisible': [('is_company','=', True)], 'required': [('is_company','!=', True)], 'readonly': [('user_ids', '!=', [])]}" class="font-weight-bold"/>
                    <b attrs="{'invisible': [('is_company', '=', False)]}">Address-2</b>
                </span>
                <div class="o_address_format">
                    <field name="c_street" placeholder="Street..." class="o_address_street" />
                    <field name="c_street2" placeholder="Street 2..." class="o_address_street"/>
                    <field name="c_city" placeholder="City" class="o_address_city" />
                    <field name="c_state_id" class="o_address_state" placeholder="State" />
                    <field name="c_zip" placeholder="ZIP" class="o_address_zip" />
                    <field name="c_country_id" placeholder="Country" class="o_address_country" />
                </div>
            </xpath>
        </field>
    </record>
    
    <record id="base.view_res_partner_filter" model="ir.ui.view">
        <field name="name">res.partner.select</field>
        <field name="model">res.partner</field>
        <!-- <field name="inherit_id" ref="base.view_res_partner_filter" /> -->
        <field name="arch" type="xml">
            <search string="Search Partner">
                <field name="name"
                    filter_domain="['|','|','|','|','|', ('display_name', 'ilike', self), 
                    ('ref', '=', self), ('email', 'ilike', self), ('ct_category_id', 'ilike', self),('phone', 'ilike', self),('mobile', 'ilike', self)]"/>
                <field name="parent_id" domain="[('is_company', '=', True)]" operator="child_of" invisible="1"/>
                <field name="email" filter_domain="[('email', 'ilike', self)]" invisible="1"/>
                <field name="phone" filter_domain="['|', ('phone', 'ilike', self), ('mobile', 'ilike', self)]" invisible="1"/>
                <field name="category_id" string="Tag" filter_domain="[('category_id', 'child_of', self)]" invisible="1"/>
                <field name="user_id" invisible="1"/>
                <field name="ct_category_id" filter_domain="[('ct_category_id', 'ilike', self)]"/>
                <separator/>
                <filter string="Individuals" name="type_person" domain="[('is_company', '=', False)]" invisible="1"/>
                <filter string="Companies" name="type_company" domain="[('is_company', '=', True)]" invisible="1"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]" invisible="1"/>
                <separator/>
                <group expand="0" name="group_by" string="Group By">
                    <filter name="salesperson" string="Salesperson" domain="[]" context="{'group_by' : 'user_id'}" invisible="1"/>
                    <filter name="group_company" string="Company" context="{'group_by': 'parent_id'}" invisible="1"/>
                    <filter name="group_country" string="Country" context="{'group_by': 'country_id'}" invisible="1"/>
                    <filter name="group_ct_category_id" string="Category" context="{'group_by': 'ct_category_id'}"/>
                    <filter name="name" string="Name" context="{'group_by': 'name'}"/>
                    <filter name="phone" string="phone" context="{'group_by': 'phone'}"/>
                </group>
            </search>
        </field>
    </record>

