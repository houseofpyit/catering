<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hop_calendar_view_form" model="ir.ui.view">
        <field name="name">hop.calendar.view.form</field>
        <field name="model">hop.calendar</field>
        <field name="arch" type="xml">
            <form string="Calendar" create="0">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="cancel" />
                </header>
                <sheet>
                    <h1>
                        <field name="seq_name" readonly="1" />
                    </h1>   
                    <group>
                        <group>
                            <field name="active" invisible="1"/>
                            <field name="name" invisible="1" />
                            <field name="inquiry_by" attrs="{'readonly': [('is_lead','=',True)]}"/>
                            <field name="customer_id"  required="True" options="{'no_quick_create':true}" domain="[('is_customer','=',True)]" context="{'default_is_customer': True}"/>
                            <field name="party_number" required="True" attrs="{'readonly': [('is_lead','=',True)]}"/>
                            <field name="venue_address"/>
                            <field name="is_lead" invisible="1" attrs="{'readonly': [('is_lead','=',True)]}"/>
                            <field name="date" invisible="0" readonly="1"/>
                            <field name="active" invisible="1" attrs="{'readonly': [('is_lead','=',True)]}"/>
                        </group>
                        <group>
                            <field name="color_type" invisible="1"/>
                            <field name="color" widget="color_picker" force_save="1" invisible="1"/>
                            <field name="email" attrs="{'readonly': [('is_lead','=',True)]}"/>
                            <field name="type" readonly="1" />
                            <field name="pkg_list" attrs="{'invisible': [('type','!=','website')]}"/>
                        </group>
                    </group>
                    <notebook >
                        <page string="Event Detail's" >
                            <field name="calendar_line_ids" attrs="{'readonly': [('is_lead','=',True)]}">
                                    <tree editable="bottom" decoration-success="state == 'production'"
                                    decoration-danger="state == 'draft'" decoration-info="state == 'create_menu'"
                                    decoration-warning="state == 'convert_planner'">
                                    <field name="lead_id" invisible="1"/>
                                    <field name="date"/>
                                    <field name="function_name" options="{'no_quick_create':true}"/>
                                    <field name="meal_type"/>
                                    <field name="time" widget="float_time"/>
                                    <field name="am_pm" />
                                    <field name="no_of_pax"/>
                                    <field name="remarks"/>
                                    <button string="Open Menu Planner" name="open_planner" type="object" class="oe_highlight" attrs="{'column_invisible': [('parent.is_lead','=',False)]}"/>
                                    <field name="color" widget="color_picker" force_save="1" invisible="1"/>
                                    <field name="state" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <group>
                        <!-- <button string="Inquiry Cancel" name="inquiry_cancel" type="object" class="oe_highlight oe_read_only"  attrs="{'invisible': ['|',('is_lead','=',True),('state','=','cancel')]}"/> -->
                        <button string="Convert to Menu Planner" name="convert_planner" type="object" class="oe_highlight oe_read_only" attrs="{'invisible': ['|',('is_lead','=',True),('state','=','cancel')]}"/>
                        <button string="Update Menu Planner" name="update_customer_id" type="object" class="oe_highlight" invisible="1"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


    <record id="hop_calendar_view_tree" model="ir.ui.view">
        <field name="name">hop.calendar.view.tree</field>
        <field name="model">hop.calendar</field>
        <field name="arch" type="xml">
            <tree string="Hop Calendar" default_order='id desc' create="0">
                <field name="date"/>
                <field name="customer_id"/>
                <field name="party_number"/>
                <field name="venue_address"/>
                <!-- <field name="inquiry_by"/> -->
                <field name="calendar_line_ids" options="{'color_field': 'color','no_quick_create':true}" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="view_hop_calendar_calendar" model="ir.ui.view">
        <field name="name">hop.calendar.calendar</field>
        <field name="model">hop.calendar</field>
        <field name="arch" type="xml">
            <calendar string="Calendar" date_start="date" color="color" mode="month" event_limit="5" hide_time="true" quick_add="False" event_open_popup="False">
                <field name="customer_id"/>
                <field name="date"/>
                <field name="party_number"/>
                <field name="venue_address"/>
                <field name="inquiry_by"/>
                <field name="calendar_line_ids" options='{"color_field":"color"}'>
                    <tree editable="bottom">
                        <field name="lead_id"/>
                        <field name="date"/>
                        <field name="function_name"/>
                        <field name="meal_type"/>
                        <field name="no_of_pax"/>
                        <field name="remarks"/>
                        <field name="color" widget="color_picker" force_save="1" invisible="1"/>
                    </tree>
                </field>
                <field name="color_type" invisible="1"/>
                <field name="color" widget="color_picker" force_save="1" invisible="1"/>
            </calendar>
        </field>
    </record>

    <record id="view_hop_calendar_filter" model="ir.ui.view">
        <field name="name">hop.calendar.search</field>
        <field name="model">hop.calendar</field>
        <field name="arch" type="xml">
            <search string="Search Date">
                <field name="customer_id" filter_domain="[('customer_id', 'ilike', self)]"/>
                <field name="party_number" filter_domain="[('party_number', 'ilike', self)]"/>
                <field name="venue_address" filter_domain="[('venue_address', 'ilike', self)]"/>
                <field name="date" filter_domain="[('date', 'ilike', self)]"/>
                
                    <filter string="Upcoming/Running" name="upcoming"
                    domain="[('date', '&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0)))]" help="Upcoming events from today" />
                <separator />
                <group expand="0" string="Group By">
                    <filter string="Date" name="group_by_date" domain="[]" context="{'group_by': 'date'}"/>
                    <filter string="Party Name" name="group_by_party_name_id" domain="[]" context="{'group_by': 'customer_id'}"/>
                </group>
            </search>
        </field>
    </record>


    <record id="hop_calendar_action" model="ir.actions.act_window">
        <field name="name">Event Inquiry</field>
        <field name="res_model">hop.calendar</field>
        <field name="view_mode">calendar,form,tree</field>
        <field name="context">{'search_default_upcoming':1}</field>
    </record>

    <record model="ir.actions.server" id="hop_calenar_action">
        <field name="name">Cancel</field>
        <field name="model_id" ref="ct_function_v15.model_hop_calendar"/>
        <field name="binding_model_id" ref="ct_function_v15.model_hop_calendar"/>
        <field name="state">code</field>
        <field name="code">
            if records:
                action = records.inquiry_cancel()
        </field>
    </record>

</odoo>
