<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="inherit_purchase_order" model="ir.ui.view">
        <field name="name">purchase.order.view.form.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr='//form' position='attributes'>
                <attribute name="create">false</attribute>
                <attribute name="delete">false</attribute>
            </xpath>
            <!-- <xpath expr="//button[@name='action_create_invoice'][1]" position="attributes">
                <attribute name="attrs">{'invisible': [('create_bill','=',True)]}</attribute>
            </xpath> -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="send_email" invisible="1" />
                <field name="active" invisible="1"/>
            </xpath>
            <xpath expr="//form/header/button[@name='button_confirm']" position="before">
                <button name="%(wizard_email_action)d"  type="action" string="Send Quotation" invisible="1" class="btn-primary"></button>
            </xpath>
            <xpath expr="//button[@name='button_confirm'][1]" position="attributes">
               <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='action_rfq_send'][2]" position="attributes">
               <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='print_quotation'][2]" position="attributes">
               <attribute name="invisible">1</attribute>
            </xpath>
            <!-- <xpath expr="//field[@name='state']" position="replace">
                <field name="state" widget="statusbar" statusbar_visible="purchase" readonly="1"/>
            </xpath> -->
            <xpath expr="//field[@name='state']" position="replace">
                <field name="state" widget="statusbar" statusbar_visible="draft" />
            </xpath>
            <xpath expr="//button[@name='button_confirm'][2]" position="attributes">
               <attribute name="invisible">1</attribute>
            </xpath>
            <!-- <xpath expr="//field[@name='l10n_in_gst_treatment']" position="attributes">
                <attribute name="invisible">1</attribute>
             </xpath> -->
             <xpath expr="//field[@name='partner_ref']" position="attributes">
                <attribute name="invisible">1</attribute>
             </xpath>
            <xpath expr="//field[@name='qty_received']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='qty_invoiced']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='action_create_invoice']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='button_cancel']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='action_view_picking']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='action_rfq_send']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='action_rfq_send'][1]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='action_rfq_send'][3]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='print_quotation']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='action_create_invoice'][2]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='button_done']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='confirm_reminder_mail']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="context">{'default_is_vender': True}</attribute>
                <attribute name="options">{'no_quick_create':true}</attribute>
            </xpath>
            <xpath expr="//page[@name='purchase_delivery_invoice']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='partner_ref']" position="after">
                <field name="venue_address"/>
                <field name="po_type" readonly="1"/>
                <field name="fuction_id_rec" readonly="1" />
                <field name="is_out_sider" invisible="1"/>
                <field name="create_bill"  invisible="1"/>
                <field name="total_qty" invisible="1"/>
                <field name="category_id" widget="many2many_tags" invisible="0"/>
            </xpath>
            <xpath expr="//div[@class='oe_title']" position="replace">
                <center><span class="o_form_label"> <field name="po_type" readonly="1" /></span></center>
                <div class="oe_title">
                    <span class="o_form_label">Purchase Order </span>
                    <h1>
                        <field name="priority" widget="priority" class="mr-3"/>
                        <field name="name" readonly="1"/>
                    </h1>
                </div>
            </xpath>
            <!-- <xpath expr="//tree/field[@name='product_qty']" position="before">
                <field name="no_of_pax" attrs="{'column_invisible': [('parent.is_out_sider' , '!=', True)]}" />
            </xpath> -->
            <xpath expr="//tree/field[@name='product_qty']" position="attributes">
                <attribute name="attrs">{'column_invisible': [('parent.is_out_sider' , '=', True)]}</attribute>
            </xpath>
            <xpath expr="//tree/field[@name='product_qty']" position="replace">
                <field name="product_qty" sum="Qty" />
            </xpath>
            <xpath expr="//tree/field[@name='name']" position="replace">
                <field name="name" required="0" readonly="0"/>
            </xpath>
            <xpath expr="//tree/field[@name='name']" position="attributes">
                <attribute name="attrs">{'column_invisible': [('parent.po_type' , '=', 'row_material')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='currency_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='date_order']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='partner_ref']" position="attributes">
                <attribute name="string">Vendor Bill No</attribute>
            </xpath>
            <xpath expr="//div[@name='date_planned_div']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//label[@for='date_planned']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//div[@name='reminder']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='date_order']" position="after">
                <field name="manager_name_id" attrs="{'invisible': [('po_type', '=', 'normal')]}" options="{'no_quick_create':true}" context="{'default_is_vender': True}" readonly="1"/>
                <field name="meal_type" readonly="1" attrs="{'invisible': [('po_type', '=', 'normal')]}" />
                <field name="date" force_save="1" attrs="{'invisible': [('po_type', '!=', 'normal')]}" string="Date"/>
                <field name="date"  force_save="1" readonly="1" attrs="{'invisible': [('po_type', '=', 'normal')]}" string="Function Date"/>
                <field name="time" widget="float_time" readonly="1" attrs="{'invisible': [('po_type', '=', 'normal')]}"/>
                <field name="am_pm" readonly="1" attrs="{'invisible': [('po_type', '=', 'normal')]}"/>
                <field name="remarks" readonly="1" attrs="{'invisible': [('po_type', '=', 'normal')]}"/>
                <field name="delivery_date" attrs="{'required': [('po_type', '=', 'row_material')], 'invisible': [('po_type', '=', 'in_house')]}"/>
                <field name="delivery_time" widget="float_time" attrs="{'required': [('po_type', '=', 'row_material')], 'invisible': [('po_type', '=', 'in_house')]}"/>
                <field name="delivery_am_pm" attrs="{'required': [('po_type', '=', 'row_material')], 'invisible': [('po_type', '=', 'in_house')]}"/>                
            </xpath>
            <xpath expr="//tree/field[@name='product_uom']" position="after">
                <field name="fuction_line_id" invisible="1"/>
                <field name="labour_line_id" invisible="1"/>
                <field name="service_line_id" invisible="1" />
                <field name="hospitality_ids" attrs="{'column_invisible': [('parent.po_type' , '!=', 'service')]}" options="{'no_quick_create':true}"/>
                <field name="shift_date" attrs="{'column_invisible': [('parent.po_type' , '!=', 'service')]}"/>
                <field name="shift_time" attrs="{'column_invisible': [('parent.po_type' , '!=', 'service')]}"/>
                <field name="remarks" attrs="{'column_invisible': [('parent.po_type' , '!=', 'service')]}"/>
                <field name="location" attrs="{'column_invisible': [('parent.po_type' , '!=', 'service')]}"/>
                <field name="date" attrs="{'column_invisible': [('parent.po_type' , 'not in', ['row_material','addons'])]}"/>
                <field name="time" widget="float_time" attrs="{'column_invisible': [('parent.po_type' , 'not in', ['row_material','addons'])]}"/>
                <field name="am_pm" attrs="{'column_invisible': [('parent.po_type' , 'not in', ['row_material','addons'])]}"/>
                <field name="instruction" attrs="{'column_invisible': [('parent.po_type' , 'not in', ('addons','in_house','out_source'))]}" />
                <!-- <field name="product_id" column_invisible="1" options="{'no_create': True,'no_edit':True,'no_open':True}"/> -->
                <field name="category_id" attrs="{'column_invisible': [('parent.po_type' , '!=', 'in_house')]}"  options="{'no_quick_create':true}"/>
                <field name="helper" attrs="{'column_invisible': [('parent.po_type' , 'not in', ('in_house','out_source'))]}"/>
                <field name="chief" attrs="{'column_invisible': [('parent.po_type' , 'not in', ('in_house','out_source'))]}"/>
                <field name="no_of_pax" attrs="{'column_invisible': [('parent.po_type' , 'not in', ('in_house','out_source'))]}" />
                <field name="order_qty" attrs="{'column_invisible': [('parent.po_type' , 'not in', ('in_house','out_source'))]}" />
                <field name="qty_cal_type" attrs="{'column_invisible': [('parent.po_type' , 'not in', ('in_house','out_source'))]}" />
            </xpath>  
            <xpath expr="//tree/field[@name='date_planned']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath> 
            <xpath expr="//tree/field[@name='product_id']" position="attributes">
            <attribute name="options">{'no_quick_create':true}</attribute>
            </xpath> 
            <xpath expr="//tree/field[@name='product_uom']" position="attributes">
            <attribute name="options">{'no_quick_create':true}</attribute>
            </xpath> 
            <xpath expr="//page/field[@name='order_line']/form/group/group/div/field[@name='product_uom']" position="attributes">
                <attribute name="options">{'no_quick_create':true}</attribute>
            </xpath> 
            <xpath expr="//page/field[@name='order_line']/form/group/group/field[@name='product_id']" position="attributes">
                <attribute name="options">{'no_quick_create':true}</attribute>
            </xpath> 
            <!-- <xpath expr="//tree/field[@name='price_unit']" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath> -->
            <!-- <xpath expr="//tree/field[@name='taxes_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath> -->
            <!-- <xpath expr="//tree/field[@name='price_subtotal']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath> -->
            <!-- <xpath expr="//field[@name='efective_date']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath> -->
            <xpath expr="//page/field[@name='order_line']/form/group/group/field[@name='product_id']" position="after">
            <field name="name" attrs="{'invisible': [('parent.po_type', '=', 'row_material')]}"/>
                <field name="time" attrs="{'invisible': [('parent.po_type', 'in', ('out_source','normal'))]}" widget="float_time" readonly="1"/>
                <field name="am_pm" attrs="{'invisible': [('parent.po_type', 'in', ('row_material','normal'))]}"/>
            </xpath>
            <xpath expr="//page/field[@name='order_line']/form/group/group/field[@name='taxes_id']" position="after">
                <field name="instruction" attrs="{'invisible': [('parent.po_type', 'in', ('row_material','normal'))]}"/>
                <field name="price_subtotal" attrs="{'invisible': [('parent.po_type', '=', 'service')]}"/>
            </xpath>
            <xpath expr="//tree/field[@name='price_subtotal']" position="attributes">
                <attribute name="sum">Subtotal</attribute>
            </xpath>
            <xpath expr="//page/field[@name='order_line']/form/group/group/field[@name='instruction']" position="after">
                <field name="helper" attrs="{'invisible': [('parent.po_type', 'in', ('row_material','normal'))]}"/>
                <field name="no_of_pax" attrs="{'invisible': [('parent.po_type', 'in', ('row_material','normal'))]}"/>
                <field name="qty_cal_type" attrs="{'invisible': [('parent.po_type', 'in', ('row_material','normal'))]}"/>
                <field name="price_unit" attrs="{'invisible': [('parent.po_type', 'in', ('row_material','normal'))]}"/>
                <field name="category_id" attrs="{'invisible': [('parent.po_type' , 'in', ('row_material','out_source','addons','normal'))]}" options="{'no_quick_create':true}"/>
            </xpath>
        </field>
    </record>

    <record id="purchase_order_view_tree_service" model="ir.ui.view">
        <field name="name">purchase.order.view.tree</field>
        <field name="model">purchase.order</field>
        <field name="arch" type="xml">
            <tree decoration-muted="state == 'cancel'"
                decoration-info="invoice_status == 'to invoice'"
                string="Purchase Order"
                class="o_purchase_order" delete="false">
                <header>
                    <button name="action_create_invoice" type="object" string="Create Bills"/>
                </header>
                <field name="name" string="Reference" readonly="1" decoration-bf="1" decoration-info="state in ('draft','sent')"/>
                <field name="fuction_id_rec"/>
                <field name="date"/>
                <field name="partner_id"/>
                <field name="venue_address"/>
                <field name="meal_type" width="30"/>
                <field name="state"/>
                <field name="create_bill" invisible="1"/>
                <field name="total_qty" sum="total_qty"/>
                <field name="invoice_status" widget="badge" decoration-success="invoice_status == 'invoiced'" decoration-info="invoice_status == 'to invoice'" optional="hide"/>
                <field name="amount_total"  sum="amount_total"/>
            </tree>
        </field>
    </record>


