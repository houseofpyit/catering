                <field name="name" />
                <field name="date"/>
                <field name="meal_type"/>
                <field name="party_name_id" context="{'default_is_customer': True}"/>
                <field name="mobile_num"/>
                <field name="venue_address"/>
                <field name="stage" />
                <field name="emergency_contact" invisible="1"/>
                <field name="stage_check" invisible="1" />
            </tree>
        </field>
    </record>

    <record id="view_hop_lead_filter" model="ir.ui.view">
        <field name="name">hop.lead.search</field>
        <field name="model">hop.lead</field>
        <field name="arch" type="xml">
            <search string="Menu Planner">
                <field name="party_name_id" filter_domain="[('party_name_id', 'ilike', self)]"/>
                <field name="fuction_name_id" filter_domain="[('fuction_name_id', 'ilike', self)]"/>

                <separator/>
                <filter string="Date" name="current_date"
                    domain="[('date', '&gt;=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="Function Name" name="fuction_name_id"/>
                <filter string="Party Name" name="party_name_id"/>
                <separator/>
                
                <group expand="0" string="Group By">
                    <filter string="Date" name="group_by_date" domain="[]" context="{'group_by': 'date'}"/>
                    <filter string="Function Name" name="group_by_fuction_name_id" domain="[]" context="{'group_by': 'fuction_name_id'}"/>
                    <filter string="Party Name" name="group_by_party_name_id" domain="[]" context="{'group_by': 'party_name_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="hop_lead_action" model="ir.actions.act_window">
        <field name="name">Menu Planner</field>
        <field name="res_model">hop.lead</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_current_date': 1,'create':0}</field>
    </record>

    <record id="fetch_menu_wizard_action_create_and_open" model="ir.actions.server">
        <field name="name">Fetch Menu</field>
        <field name="model_id" ref="ct_function_v15.model_hop_lead"/>
        <field name="binding_model_id" ref="ct_function_v15.model_hop_lead"/>
        <field name="state">code</field>
        <field name="code">action = model.fetch_menu()</field>
    </record>

    <record id="action_set_to_draft_menuplanner" model="ir.actions.server">
        <field name="name">Set To Draft</field>
        <field name="model_id" ref="ct_function_v15.model_hop_lead"/>
        <field name="binding_model_id" ref="ct_function_v15.model_hop_lead"/>
        <field name="state">code</field>
        <field name="code">action = model.set_to_draft()</field>
    </record>

    <record model="ir.actions.server" id="hop_lead_action_cancel">
        <field name="name">Cancel Menu Planner</field>
        <field name="model_id" ref="ct_function_v15.model_hop_lead"/>
        <field name="binding_model_id" ref="ct_function_v15.model_hop_lead"/>

        <field name="state">code</field>
        <field name="code">
            if records:
                action = records.action_cancel()
        </field>
    </record>
</odoo>
