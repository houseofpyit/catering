<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hop_extra_service_wizard_form" model="ir.ui.view">
        <field name="name">hop.extra.service.wizard</field>
        <field name="model">hop.extra.service.wizard</field>
        <field name="arch" type="xml">
            <form string="Raw Material Wiz">
                <sheet>
                     <group>
                        <group>
                            <field name="vender_ids" options="{'no_quick_create':true}" widget="many2many_tags" invisible="1" />
                            <field name="vender_id" invisible="0" domain="[('id','in',vender_ids)]" options="{'no_quick_create':true}"/>
                            <field name="function_date" readonly="1"/>
                            <field name="delivery_date" invisible="0" required="0" />
                            
                        </group>
                        <group>
                           <field name="delivery_time" invisible="0" widget="float_time" required="0" />
                            <field name="delivery_am_pm" invisible="0" required="0" />
                        </group>
                    </group>
                    <group>
                        <group>
                        </group>
                        <group>
                            <button name="action_apply_all" string="Apply All" type="object" class="oe_highlight"/>
                        </group>
                    </group>
                    <group>
                        <div>
                            <field name="line_ids"  widget="section_and_note_one2many"  mode="tree" >
                                <tree editable="bottom" delete="0" create="0" edit="0" readonly="1">
                                    <control>
                                        <create name="add_line_control" string="Add a product"/>
                                        <create name="add_section_control" string="Add a section" context="{'default_display_type': 'line_section'}"/>
                                        <create name="add_note_control" string="Add a note" context="{'default_display_type': 'line_note'}"/>
                                    </control>

                                    <field name="name" widget="section_and_note_text" readonly="1" force_save="1"/>
                                    <field name="display_type" force_save="1" invisible="1" readonly="1"/>
                                    <field name="mst_id" readonly="1" force_save="1" invisible="1"/>
                                    <field name="vender_id" force_save="1" options="{'no_quick_create':true}" readonly="1" invisible="1"/>
                                    <field name="service_id" force_save="1" readonly="1" options="{'no_quick_create':true}"/>
                                    <field name="qty_ids" force_save="1" readonly="1"/>
                                    <field name="uom_id" force_save="1" readonly="1" options="{'no_quick_create':true}"/>
                                    <field name="price" force_save="1" readonly="1"/>
                                    <field name="cost" force_save="1" readonly="1"/>
                                    <field name="date" force_save="1" readonly="1"/>
                                    <field name="time" force_save="1" readonly="1"/>
                                    <field name="am_pm" force_save="1" readonly="1"/>
                                    <field name="delivery_date" invisible="0" force_save="1" readonly="1" />
                                    <field name="delivery_time" invisible="0" force_save="1" widget="float_time" readonly="1" />
                                    <field name="delivery_am_pm" invisible="0" force_save="1" readonly="1" />
                                </tree>
                            </field>
                        </div>
                    </group>
                </sheet>
                <footer>
                    <button name="action_confirm" string="Generate" type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_service_po" model="ir.actions.act_window">
        <field name="name">Purchase order</field>
        <field name="res_model">hop.extra.service.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>