<?xml version="1.0"?>
<odoo>
    <record id="done_activity_form" model="ir.ui.view">
        <field name="name">done.activity.form</field>
        <field name="model">done.activity</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="description"/>
                    </group>
                    <group>
                        <label for="next_activity_id"/>
                        <div>
                            <div class="o_row mr16">
                                <field name="next_activity_id" options="{'no_create': True, 'no_open': True}"/>
                                <span class="oe_form_field" attrs="{'invisible': ['|', ('next_activity_id', '=', False), ('date_action_data', '=', False)]}">&#160;on&#160;</span>
                                <field name="date_action_data" attrs="{'invisible': [('next_activity_id', '=', False)]}" placeholder="Choose a date..."/>
                            </div>
                            <div>
                                <field name="title_action" placeholder="e.g. Discuss proposal"
                                   attrs="{'invisible': [('next_activity_id', '=', False)]}"/>
                            </div>
                        </div>
                    </group>
                </group>
                <footer>
                    <button name="done_activity_description" type="object" string="Save" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_done_activity" model="ir.actions.act_window">
        <field name="name">Done Activity</field>
        <field name="res_model">done.activity</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="done_activity_form"/>
        <field name="target">new</field>
    </record>

</odoo>