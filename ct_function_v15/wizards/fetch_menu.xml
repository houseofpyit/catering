<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="fetch_menu_form" model="ir.ui.view">
        <field name="name">hop.fetch.menu</field>
        <field name="model">hop.fetch.menu</field>
        <field name="arch" type="xml">
            <form >
                <sheet>
                    <group>
                        <field name="fuction_id" options="{'no_quick_create':true}"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Ok" name="action_ok" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_fetch_menu" model="ir.actions.act_window">
        <field name="name">Fetch Menu</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hop.fetch.menu</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
