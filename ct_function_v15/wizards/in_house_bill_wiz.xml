<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hop_in_house_bill_wiz" model="ir.ui.view">
        <field name="name">hop.in.house.bill.wiz</field>
        <field name="model">hop.in.house.bill.wiz</field>
        <field name="arch" type="xml">
            <form string="Vendor Bill">
                <sheet>
                    <group>
                        <group>
                            <field name="from_date" />
                            <field name="vender_ids" widget="many2many_tags" invisible="1"/>
                            <field name="vender_id" domain="[('id','in',vender_ids)]"  required="True" options="{'no_quick_create':true}"/>
                            <field name="purchase_order_ids" widget="many2many_tags" invisible="1" domain="[('state','!=','cancel')]"/>
                        </group>
                        <group>
                            <field name="to_date" />
                            <field name="date_wish_po" invisible="1" widget="many2many_tags"/>
                            <field name="order_ids" widget="many2many_tags"  domain="[('partner_id','=',vender_id),('id','not in',purchase_order_ids),('id','in',date_wish_po)]" options="{'no_quick_create':True}" />
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_confirm" string="Generate" type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_hop_in_house_bill_wiz" model="ir.actions.act_window">
        <field name="name">Vendor Bill</field>
        <field name="res_model">hop.in.house.bill.wiz</field>
        <field name="view_mode">form</field>
         <field name="target">new</field>
    </record>
    
