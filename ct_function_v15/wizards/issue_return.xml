<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="issue_return_form" model="ir.ui.view">
        <field name="name">hop.issue.return</field>
        <field name="model">hop.issue.return</field>
        <field name="arch" type="xml">
            <form >
                <sheet>
               
                            <field nolabel="1" name="ir_line_ids">
                                <tree editable="bottom">
                                    <field name="product_id" options="{'no_quick_create':true}" required="1" domain="['|',('utility_type','=','raw_materials'),('is_recipe','=',True)]"/>
                                    <field name="uom_id" options="{'no_quick_create':true}" />
                                    <field name="qty"/>
                                </tree>
                            </field>
            
                </sheet>
                <footer>
                    <button string="Save" name="action_save" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_issue" model="ir.actions.act_window">
        <field name="name">Issue Product</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hop.issue.return</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
         <field name="context">{
                'type': 'issue'
            }
            </field>
    </record>

    <record id="action_return" model="ir.actions.act_window">
        <field name="name">Return Product</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hop.issue.return</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
           <field name="context">{
                'type': 'return'
            }
            </field>
    </record>
</odoo>
