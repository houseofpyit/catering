<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="print_form" model="ir.ui.view">
        <field name="name">hop.print</field>
        <field name="model">hop.print</field>
        <field name="arch" type="xml">
            <form >
                <sheet>
                    <group>
                        <field name="type"/>
                        <field name="without_description" attrs="{'invisible': [('type', '=', 'quotation')]}"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Generate" name="action_print" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_print" model="ir.actions.act_window">
        <field name="name">Print</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hop.print</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
