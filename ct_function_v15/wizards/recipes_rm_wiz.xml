<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hop_recipe_rm_wizard_view_form" model="ir.ui.view">
        <field name="name">hop.recipe.rm.view.form</field>
        <field name="model">hop.recipe.rm</field>
        <field name="arch" type="xml">
            <form string="Add Weight">
                <sheet>
                    <group>
                        <group>
                            <field name="recipe_id" required="True" readonly="1" options="{'no_quick_create':true}"/>
                            <field name="venue_address" />
                            <field name="function_id" invisible="1" />
                        </group>
                        <group>
                            <field name="fun_date" readonly="1"/>
                        </group>
                            <field name="rec_rm_ids" >
                                <tree editable="bottom">
                                    <field name="product_id" options="{'no_quick_create':true}" context="{'default_utility_type': 'raw_materials','default_detailed_type': 'product','default_standard_price':1}" />
                                    <field name="uom" options="{'no_quick_create':true}"/>
                                    <field name="weight" sum="Weight"></field>
                                    <field name="cost" sum="Cost"/>
                                    <field name="item_cost" optional="hide" />
                                </tree>
                            </field>
                        </group>
                </sheet>
                
            </form>
        </field>
    </record>

    <record id="action_hop_recipe_rm" model="ir.actions.act_window">
        <field name="name">Raw Materials</field>
        <field name="res_model">hop.recipe.rm</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>