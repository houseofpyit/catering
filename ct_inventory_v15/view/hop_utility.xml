<?xml version="1.0" encoding="utf-8"?>
<odoo>

<!-- Utensils -->

    <record id="hop_utensils_view_form" model="ir.ui.view">
        <field name="name">product.template.view.form</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <form string="Utensils">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="True"/>
                        </group>
                        <group>
                            <field name="rate"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="hop_utensils_view_tree" model="ir.ui.view">
        <field name="name">product.template.view.tree</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <tree string="Utensils">
                <field name="name" />
                <field name="rate" />
            </tree>
        </field>
    </record>

    <record id="hop_utensils_action" model="ir.actions.act_window">
        <field name="name">Utensils</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('utility_type', '=','utensils' )]</field>
        <field name="context">{'default_utility_type': 'utensils'}</field>
        <field name="view_ids" eval="[(5, 0, 0,0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('hop_utensils_view_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('hop_utensils_view_form')})]"/>
    </record>


