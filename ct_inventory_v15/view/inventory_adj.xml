<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hop_inventory_adj_view_form" model="ir.ui.view">
        <field name="name">hop.inventory.adj.view.form</field>
        <field name="model">hop.inventory.adj</field>
        <field name="arch" type="xml">
            <form string="Inventory Adjustment">
                <header>
                    <field name="state" widget="statusbar"/>
                    <button string="Done" name="action_done" type="object" class="oe_highlight" attrs="{'invisible': [('state' , 'in', 'done')] }" confirm="Before Done Verify your product stock !!!"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name" nolabel="1" string="Number" readonly='1'/>
                    </h1>
                    <group>
                        <group>
                            <field name="date" />
                        </group>
                        <group>
                            <field name="stock_type" required="1"/>
                            <field name="remarks"/>
                        </group>
                    </group>
                    <group>
                        <field name="line_ids" nolabel="1" attrs="{'readonly': [('state' , 'in', ['done'])] }" tracking="1">
                            <tree editable="bottom">
                                <field name="product_id"  width="20" options="{'no_quick_create':true}"/>
                                <field name="qty" width="20" sum="Quantity" force_save="1" readonly="1"/>
                                <field name="new_qty" width="20" sum="Quantity"/>
                            </tree>
                            <kanban class="o_kanban_mobile">
                                <field name="product_id" />
                                <field name="qty"/>    
                                <field name="new_qty"/>    
                                <templates>
                                    <t t-name="kanban-box">
                                        <div t-attf-class="oe_kanban_card oe_kanban_global_click ">
                                            <div class="row">
                                                <div class="col-12">
                                                    <strong>
                                                        <span>
                                                                Raw Material:
                                                            <t t-esc="record.product_id.value"/>
                                                        </span>
                                                    </strong>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-12 text-muted">
                                                    <span>
                                                            Quantity:
                                                        <t t-esc="record.qty.value"/>
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-12 text-muted">
                                                    <span>
                                                            New Quantity:
                                                        <t t-esc="record.new_qty.value"/>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                </templates> 
                            </kanban>
                            <form>
                                <field name="product_id" width="20" options="{'no_quick_create':true}"/>
                                <field name="qty" width="20" sum="Quantity" force_save="1" readonly="1"/>
                                <field name="new_qty" width="20" sum="Quantity"/> 
                            </form>
                        </field>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="hop_inventory_adj_view_tree" model="ir.ui.view">
        <field name="name">hop.inventory.adj.view.tree</field>
        <field name="model">hop.inventory.adj</field>
        <field name="arch" type="xml">
            <tree string="Inventory Adjustment" >
                <field name="name" />
                <field name="date" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="hop_inventory_adj_action" model="ir.actions.act_window">
        <field name="name">Inventory Adjustment</field>
        <field name="res_model">hop.inventory.adj</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
