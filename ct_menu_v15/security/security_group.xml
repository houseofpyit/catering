<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="res.groups" id="group_event_inq">
        <field name="name">Event Inquiry</field>
    </record>

    <record model="res.groups" id="group_menu_planner">
        <field name="name">Menu Planner</field>
    </record>

    <record model="res.groups" id="group_confirm_order">
        <field name="name">Confirmed Orders</field>
    </record>

    <record model="res.groups" id="group_purchase">
        <field name="name">Purchase</field>
    </record>

    <record model="res.groups" id="group_sales">
        <field name="name">Sales</field>
    </record>

    <record model="res.groups" id="group_utensils_manager">
        <field name="name">Utensils Manager</field>
    </record>

    <record model="res.groups" id="group_master">
        <field name="name">Master</field>
    </record>

    <record model="res.groups" id="group_utility">
        <field name="name">Utility</field>
    </record>


    <!-- Sales Group Hide -->
    <record id="sales_team.group_sale_salesman" model="res.groups">
        <field name="name">Sales User: Own Documents Only</field>
        <field name="category_id" ref="base.module_category_hidden"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="comment">the user will have access to his own data in the sales application.</field>
    </record>

    <record id="sales_team.group_sale_salesman_all_leads" model="res.groups">
        <field name="name">Sales User: All Documents</field>
        <field name="category_id" ref="base.module_category_hidden"/>
        <field name="implied_ids" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        <field name="comment">the user will have access to all records of everyone in the sales application.</field>
    </record>

    <record id="sales_team.group_sale_manager" model="res.groups">
        <field name="name">Salse Administrator</field>
        <field name="comment">the user will have an access to the sales configuration as well as statistic reports.</field>
        <field name="category_id" ref="base.module_category_hidden"/>
        <field name="implied_ids" eval="[(4, ref('sales_team.group_sale_salesman_all_leads'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <!-- Account Group Hide -->
    <record id="account.group_account_invoice" model="res.groups">
        <field name="name">Invoice Billing</field>
        <field name="category_id" ref="base.module_category_hidden"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="account.group_account_manager" model="res.groups">
        <field name="name">Invoice Billing Administrator</field>
        <field name="category_id" ref="base.module_category_hidden"/>
        <field name="implied_ids" eval="[(4, ref('account.group_account_invoice')),(4, ref('base.group_private_addresses'))]"/>
    </record>

    <!-- Inventory Group Hide -->
    <record id="stock.group_stock_user" model="res.groups">
        <field name="name">Inventory User</field>
        <field name="category_id" ref="base.module_category_hidden"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>
    <record id="stock.group_stock_manager" model="res.groups">
        <field name="name">Invenorty Administrator</field>
        <field name="category_id" ref="base.module_category_hidden"/>
        <field name="implied_ids" eval="[(4, ref('stock.group_stock_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <!-- Purchase Group Hide -->
    <record id="purchase.group_purchase_user" model="res.groups">
        <field name="name">Purchase User</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>

    <record id="purchase.group_purchase_manager" model="res.groups">
        <field name="name">Purchase Administrator</field>
        <field name="category_id" ref="base.module_category_hidden"/>
        <field name="implied_ids" eval="[(4, ref('purchase.group_purchase_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <!-- Admin Group Hide -->
    <record model="res.groups" id="base.group_erp_manager">
        <field name="name">Access Rights</field>
    </record>

    <record model="res.groups" id="base.group_system">
        <field name="name">Settings</field>
        <field name="implied_ids" eval="[Command.link(ref('base.group_erp_manager'))]"/>
        <field name="category_id" ref="base.module_category_hidden"/>
        <field name="users" eval="[Command.link(ref('base.user_root')), Command.link(ref('base.user_admin'))]"/>
    </record>

</odoo>
