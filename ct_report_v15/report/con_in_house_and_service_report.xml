                    <t t-if="line.get('in_house')">
                        <t t-foreach="line.get('in_house')" t-as="product">
                            <br/>
                                <table width="100%">
                                    <tr style="border:none;">
                                        <th style="width:30%;text-align:center;">Catagory</th>
                                        <th style="width:30%;text-align:center;">Product</th>
                                        <th style="width:10%;text-align:center;">No of Pax</th>
                                        <th style="width:30%;text-align:center;">instruction</th>
                                    </tr>
                                    <t t-foreach="product" t-as="pro">
                                        <center>
                                            <h5>
                                                <b>
                                                    <t t-esc="pro" />
                                                </b>
                                            </h5>
                                        </center>
                                        <t t-foreach="product.get(pro)" t-as="x">
                                            <tr>
                                                <td style="font-weight: bold;padding-left:10px;">
                                                    <t t-esc="x.get('category')" />
                                                </td>
                                                <td style="font-weight: bold;padding-left:10px;">
                                                    <t t-esc="x.get('work')" />
                                                </td>
                                                <td
                                                    style="font-weight: bold;text-align:right;padding-right:10px;">
                                                    <t t-esc="x.get('no_of_pax')" />
                                                </td>
                                                <td style="font-weight: bold;padding-left:10px;">
                                                    <t t-esc="x.get('instruction')" />
                                                </td>

                                            </tr>
                                        </t>
                                    </t>
                                </table>
                            </t>
                    </t>
                    
                        <br/>
                        <br/>
                        <t t-if="line.get('services_detail')">
                            <center><h5><b>Service</b></h5></center>
                            <table width="100%">
                                <tr>
                                    <th style="width:30px;text-align:center;">Service</th>
                                    <th style="width:15px;text-align:center;">Shift</th>
                                    <th style="width:20px;text-align:center;">Date Time</th>
                                    <th style="width:15px;text-align:center;">Quantity</th>
                                    <th style="width:20px;text-align:center;">Uom</th>
                                    <th style="width:25px;text-align:center;">Remarks</th>
                                    <th style="width:30px;text-align:center;">Vendor Name</th>
                                    <th style="width:15px;text-align:center;">Vendor No.</th>
                                    <th style="width:10px;text-align:center;">Location</th>
                                </tr>
                                <t t-foreach="line.get('services_detail')" t-as="ser">
                                        <tr>
                                            <td style="font-weight: bold;padding-left:10px;"><t t-esc="ser.get('service')"/></td>
                                            <td style="font-weight: bold;text-align:left;padding-left:10px;"><t t-esc="ser.get('shift')"/></td>
                                            <td style="font-weight: bold;text-align:left;padding-left:10px;"><t t-esc="ser.get('shift_date')" t-options='{"widget": "date","format": "dd-MM-yyyy"}'/> <t t-esc="ser.get('shift_time')"/></td>
                                            <td style="font-weight: bold;text-align:right;padding-right:10px;"><t t-esc="ser.get('qty')"/></td>
                                            <td style="font-weight: bold;text-align:left;padding-left:10px;"><t t-esc="ser.get('uom')"/></td>
                                            <td style="font-weight: bold;text-align:left;padding-left:10px;"><t t-esc="ser.get('remarks')"/></td>
                                            <td style="font-weight: bold;text-align:left;padding-left:10px;"><t t-esc="ser.get('vender_name')"/></td>
                                            <td style="font-weight: bold;text-align:right;padding-right:10px;"><t t-esc="ser.get('vender_number')"/></td>
                                            <td style="font-weight: bold;text-align:left;padding-left:10px;"><t t-esc="ser.get('location')"/></td>
                                        </tr> 
                                    </t>
                            </table>
                        </t>
                        <p style="page-break-before:always;"/>
                </t>
                </t>
           
            </t>
        </template>
    </data>
</odoo>