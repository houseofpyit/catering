<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="function_wise_recipy">
            <t t-call="web.basic_layout">
                <style>
                    td,th {
                    border: 1px solid black;
                    }

                    table {
                    border: 1px solid black;
                    border-collapse: collapse;
                    }
                </style>

                <t t-foreach="docs" t-as="t">
                    <t t-foreach="t.function_wise_recipes_vals()" t-as="line">
                    <t t-if="line.get('In-House',False)">
                        <t t-foreach="line.get('In-House',False)" t-as="product">
                            <t t-if="product.get('vander_change')">
                                <p style="page-break-before:always;" />
                                <table width="100%" style="border:none;">
                                    <td width="10%" style="border:none;padding-right:200px;">
                                    </td>
                                    <td width="80%" style="border:none;">
                                        <center>
                                            <h4>
                                                <b>Production's</b>
                                            </h4>
                                        </center>
                                        <center>
                                            <h4>
                                                <b>Function Wise Recipes Report</b>
                                            </h4>
                                        </center>
                                    </td>
                                    <td width="10%" style="border:none;">
                                        <t t-if="line.get('company_id')">
                                            <img t-att-src="'data:image/png;base64,' + str(line.get('company_id'), 'utf-8')" width="150" height="100"/>
                                        </t>
                                    </td>
                                </table>
                                <br />
                                <br />
                                <center>
                                    <h4>
                                        <b>
                                            <span>
                                                In-House
                                            </span>
                                        </b>
                                    </h4>
                                </center>
                                <table width="100%" style="border:none;">
                                    <tr style="border:none;">
                                        <td
                                            style="border-top:none;border-left:none;border-right:none;width:50%;">
                                            <b>Date : <t t-esc="line.get('date')" t-options='{"widget": "date","format": "dd-MM-yyyy"}' /></b>
                                        </td>
                                        <td
                                            style="border-top:none;border-left:none;border-right:none; text-align:right;width:50%;">
                                            <b>Venue Address : <t t-esc="line.get('venue_address')" /></b>
                                        </td>
                                    </tr>
                                    <tr style="border:none;">
                                        <td style="border:none;width:50%;">

                                            <b>Meal type : </b>
                                            <t t-esc="line.get('meal_type')" />
                                        </td>
                                        <td style="border:none; text-align:right;color:red;width:50%;">

                                            <b>Remarks : </b>
                                            <t t-esc="line.get('remarks')" />
                                        </td>
                                    </tr>
                                    <tr style="border:none;">
                                        <td style="border:none;width:50%;">
                                            <b>Time : </b>
                                            <t t-esc="line.get('time')" />

                                        </td>
                                        <td style="border:none;text-align:right;width:50%;">
                                            <b>No Of Pax : </b>
                                            <t t-esc="line.get('no_of_pax')" />
                                        </td>
                                    </tr>

                                    <tr style="border:none;">
                                        <td style="border:none;width:50%;">
                                            <b>Manager Name : </b>
                                            <t t-esc="line.get('manager_name')" />
                                        </td>
                                        <td style="border:none;text-align:right;width:50%;">
                                            <b>Contact Details : </b>
                                            <t t-esc="line.get('phone')" />
                                        </td>
                                    </tr>
                                </table>
                                <br />
                                <br />
                                
                            </t>
                            <br />
                            <center>
                                <b>
                                    <t t-esc="product.get('vender')" />
                                </b>
                            </center>
                            <br />
                            <table width="100%">
                                <tr style="border:none;">
                                    <th style="width:30%;text-align:center;">Catagory</th>
                                    <th style="width:40%;text-align:center;">Ingredients</th>
                                    <th style="width:20%;text-align:center;">Qty</th>
                                    <th style="width:30%;text-align:center;">Unit</th>
                                </tr>
                                <t t-foreach="product.get('list')" t-as="x">

                                    <tr>
                                        <td style="font-weight: bold;padding-left:10px;">
                                            <t t-esc="x.get('categ')" />
                                        </td>
                                        <td style="font-weight: bold;padding-left:10px;">
                                            <t t-esc="x.get('raw_material')" />
                                        </td>

                                        <td
                                            style="font-weight: bold;text-align:right;padding-right:10px;">
                                            <t t-esc="'%.2f'%(x.get('total'))" />
                                        </td>
                                        <td
                                            style="font-weight: bold;text-align:left;padding-left:10px;">
                                            <t t-esc="x.get('unit')" />
                                        </td>
                                    </tr>

                                </t>
                            </table>
                      

                        </t>
                    </t>
                </t>
                </t>
            </t>
        </template>
    </data>
</odoo>