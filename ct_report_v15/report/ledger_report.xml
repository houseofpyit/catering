<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="ledger_report">
            <t t-call="web.basic_layout">
                <style>
                    td {
                        border : 1px solid black;
                        font-size: 20px; 
                    }
                    th {
                        border : 1px solid black;
                        font-size: 20px; 
                    }
                </style>
                <t t-foreach="docs" t-as="t">
                <t t-foreach="t.generate_ledger_pdf_vals()" t-as="data">
                    <div class="page">
                        <table width="100%" style="border:none;">
                            <td width="20%" style="border:none;">
                            </td>
                            <td width="60%" style="border:none;">
                                <table style="width:100%;">
                                    <center>
                                        <h2>
                                            Ledger Report
                                        </h2>
                                    </center>
                                    <center>
                                            <h3 style="padding-bottom:10px;padding-top:10px;"> Date Between <span t-esc="data.get('from_date')" t-options='{"widget": "date","format": "dd-MM-yyyy"}'></span> To <span t-esc="data.get('to_date')" t-options='{"widget": "date","format": "dd-MM-yyyy"}'></span></h3>
                                    </center>
                                </table>
                            </td>
                            <td width="30%" style="border:none;">
                                <t t-if="data.get('company_id')">
                                    <img t-att-src="'data:image/png;base64,' + str(data.get('company_id'), 'utf-8')" width="150" height="100"/>
                                </t>
                            </td>
                        </table>

                        <style>
                            .total-row {
                                background-color: grey;
                                color: white;
                                font-weight: bold;
                            }
                        </style>        
                        <t t-foreach="data.get('ledger_data')" t-as="line">
                            <br/>        
                            <center><b><span style="font-size: 30px; " t-esc="line.get('party')" /></b></center>
                            <t t-set="total_credit" t-value="0" />
                            <t t-set="total_debit" t-value="0" />
                            <t t-set="total_balance" t-value="0" />
                        <table border="1" style="width: 100%; border: 1px solid black;">
                            <tr>
                                <th style="border: 1px solid black; background-color: grey; color: white; text-align: center;">Bill No.</th>
                                <th style="border: 1px solid black; background-color: grey; color: white; text-align: center;">Date</th>
                                <!-- <th style="border: 1px solid black; background-color: grey; color: white; text-align: center;">Party</th> -->
                                <th style="border: 1px solid black; background-color: grey; color: white; text-align: center;">DrAmt</th>
                                <th style="border: 1px solid black; background-color: grey; color: white; text-align: center;">CrAmt</th>
                                <th style="border: 1px solid black; background-color: grey; color: white; text-align: center;">Balance</th>
                            </tr>
                            <tr t-foreach="line.get('detail')" t-as="l"
                                t-attf-class="{{ 'total-row' if l.get('party_name') == 'Total' else '' }}">
                                <t t-set="total_credit" t-value="total_credit + l.get('credit')" />
                                <t t-set="total_debit" t-value="total_debit + l.get('debit')" />
                                <t t-set="total_balance" t-value="total_balance + l.get('balance')" />
                                <td style="padding-left: 5px;">
                                    <span t-esc="l.get('doc')" />
                                </td>
                                <td style="padding-left: 5px;">
                                    <span t-esc="l.get('date')" t-options='{"widget": "date","format": "dd-MM-yyyy"}'/>
                                </td>
                                <!-- <td style="padding-left: 5px;">
                                    <span t-esc="l.get('party_name')"/>
                                </td> -->
                                <td style="text-align: right; padding-right: 5px;">
                                    <span t-esc="'%.2f'%(l.get('credit'))" />
                                </td>
                                <td style="text-align: right; padding-right: 5px;">
                                    <span t-esc="'%.2f'%(l.get('debit'))"/>
                                </td>
                                <td style="text-align: right; padding-right: 5px;">
                                    <span t-esc="'%.2f'%(l.get('balance'))" />
                                </td>
                            </tr>
                            <tr style="background-color: grey;">
                                <td style="padding-left: 5px;">
                                    
                                </td>
                                <!-- <td style="padding-left: 5px;">
                                    
                                </td> -->
                                <td style="border: 1px solid black; background-color: grey; color: white; text-align: center;">
                                    <span> Total</span>
                                </td>
                                <td style="text-align: right; padding-right: 5px;">
                                    <span t-esc="'%.2f'%(total_credit)" />
                                </td>
                                <td style="text-align: right; padding-right: 5px;">
                                    <span t-esc="'%.2f'%(total_debit)" />
                                </td>
                                <td style="text-align: right; padding-right: 5px;">
                                    <span t-esc="'%.2f'%(total_balance)" />
                                </td>
                            </tr>

                        </table>
                        </t>
