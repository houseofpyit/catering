<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_utensils_stock">
            <t t-call="web.basic_layout">
                <style>
                    td,th {
                        border: 1px solid black;
                    }

                    table {
                        border: 1px solid black;
                        border-collapse: collapse;
                    }
                </style>
                <t t-foreach="docs" t-as="o">
                <t t-foreach="o.utensils_vals()" t-as="line">
                    <table width="100%" style="border:none;">
                        <td width="10%" style="border:none;padding-right:200px;">
                        </td>
                        <td width="80%" style="border:none;">
                            <center><h4><b>Manager's</b></h4></center>
                            <center><h4><b>Utensils Report</b></h4></center>
                        </td>
                        <td width="10%" style="border:none;">
                            <t t-if="line.get('company_id')">
                                <img t-att-src="'data:image/png;base64,' + str(line.get('company_id'), 'utf-8')" width="150" height="100"/>                            </t>
                            
                        </td>
                    </table>
                    <br></br>

                    <table width="100%" style="border:none;">
                    
                    <tr style="border:none;">
                        <td style="border-top:none;border-left:none;border-right:none;width:50%;">
                            <b>Date : <t t-esc="line.get('date')" t-options='{"widget": "date","format": "dd-MM-yyyy"}'/></b>
                        </td>
                        <td style="border-top:none;border-left:none;border-right:none; text-align:right;width:50%;">
                            <b>Venue Address : <t t-esc="line.get('venue_address')"/></b>
                        </td>
                    </tr>
                    <!-- <tr style="border:none;">
                        <td style="border:none;">
                            <b>Party Name : </b><t t-esc="line.get('function_id')"/>
                        </td>
                        <td style="border:none; text-align:left;">
                            <b>Mobile Number : </b><t t-esc="line.get('phones')"/>
                        </td>
                    </tr> -->
                    <tr style="border:none;">
                        <td style="border:none;width:50%;">
                            <!-- <b>Function Name : </b><t t-esc="line.get('fuction_name')"/> -->
                            <b>Meal type : </b><t t-esc="line.get('meal_type')"/>
                        </td>
                        <td style="border:none; text-align:left;;width:50%;">
                            <!-- <b>Meal type : </b><t t-esc="line.get('meal_type')"/> -->
                        </td>
                    </tr>   
                    <tr style="border:none;">
                        <td style="border:none;width:50%;">
                            <b>Time : </b><t t-esc="line.get('time')"/>
                            <!-- <t t-esc="line.get('am_pm')"/> -->
                        </td>
                        <td style="border:none;text-align:left;;width:50%;">
                            <b>No Of Pax : </b><t t-esc="line.get('no_of_pax')"/>
                        </td>
                    </tr>
                    <!-- <tr style="border:none;">
                        <td style="border:none;">
                            <b>Emergency Contact : </b><t t-esc="line.get('em_phone')"/>
                        </td>
                        <td style="border:none;text-align:left;">
                            <b>Remarks : </b><t t-esc="line.get('remarks')"/>
                        </td>
                    </tr> -->
                    <tr style="border:none;">
                        <td style="border:none;width:50%;">
                            <b>Manager Name	 : </b><t t-esc="line.get('manager_name')"/>
                        </td>
                        <td style="border:none;text-align:left;;width:50%;">
                            <b>Contact Details : </b><t t-esc="line.get('phone')"/>
                        </td>
                    </tr>
                    </table>
                    <br></br>
                    <t t-if="line.get('utensils_detail')">
                        <!-- <center><h5><b>Utensils</b></h5></center> -->
                        <table width="100%">
                            <tr style="border:none;">
                                <th style="text-align:center;">Raw Material</th>
                                <th style="text-align:center;">Uom</th>
                                <th style="text-align:center;">Utensils Type</th>
                                <th style="text-align:center;">Quantity</th>
                                <!-- <th style="text-align:center;">Utensil Cost</th> -->
                            </tr>
                            <t t-foreach="line.get('utensils_detail')" t-as="menu">
                                <tr>
                                    <td style="font-weight: bold;padding-left:10px;"><t t-esc="menu.get('utensils')"/></td>
                                    <td style="font-weight: bold;text-align:left;padding-left:10px;"><t t-esc="menu.get('uom')"/></td>
                                    <td style="font-weight: bold;text-align:left;padding-left:10px;"><t t-esc="menu.get('utensils_type')"/></td>
                                    <td style="font-weight: bold;text-align:right;padding-right:10px;"><t t-if="menu.get('qty')">
                                    <t t-esc="'%.2f'%(menu.get('qty'))"/>
                                    </t></td>
                                    <!-- <td style="font-weight: bold;text-align:left;padding-left:10px;"><t t-esc="menu.get('uten_cost')"/></td> -->
                                </tr> 
                            </t>
                        </table>
                    </t>
                    <p style="page-break-before:always;"/>
                </t>
                </t>
            </t>
        </template>
    </data>
</odoo>