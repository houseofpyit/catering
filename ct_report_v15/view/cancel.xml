<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hop_cancel_report_wizard_view_form" model="ir.ui.view">
        <field name="name">hop.cancel.report.wizard.view.form</field>
        <field name="model">hop.cancel.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Cancel Report">
                <sheet>
                    <group>
                        <group>
                            <field name="from_date" />
                        </group>
                        <group>
                            <field name="to_date" />
                            <field name="company_id" invisible="1"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_print" string="Generate" type="object" class="oe_highlight" />
                    <button name="generate_pdf" string="Generate Pdf" type="object"
                    class="oe_highlight" />
                    <button string="Cancel" class="oe_link oe_highlight" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_hop_cancel_report_wizard" model="ir.actions.act_window">
        <field name="name">Cancel Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hop.cancel.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>