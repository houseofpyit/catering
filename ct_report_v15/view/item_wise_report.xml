<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hop_item_wise_report_tree" model="ir.ui.view">
        <field name="name">hop.item.wise.report.tree</field>
        <field name="model">hop.item.wise.report</field>
        <field name="arch" type="xml">
            <tree string="Item Wise Report" expand="1" >
              <field name="function_id" />
                <field name="category_id" width="30" />
                <field name="item_id" options="{'no_quick_create':true}" width="30" domain="[('category_id','=',category_id)]"/>
                <field name="no_of_pax" width="30" sum="Total"/>
                <field name="per_qty" width="30" />
                <field name="qty" sum="Total" />
                <field name="uom" width="30" />
                <field name="insider_id" width="30" />
                <field name="out_sider_id" width="30" />
                <field name="cost" sum="Total" />
                <field name="rate" width="30" sum="Total"  />
                <field name="instruction" />
            </tree>
        </field>
    </record>

    <record id="hop_item_wise_report_filter" model="ir.ui.view">
        <field name="name">hop.item.wise.report.search</field>
        <field name="model">hop.item.wise.report</field>
        <field name="arch" type="xml">
            <search string="Item Wise Report">
            
                    <field name="item_id" />
                    <group expand="1" string="Group By">
                        <filter name="groupby_item" context="{'group_by' : 'item_id'}"
                            string="item" />
                    </group>
             
            </search>
        </field>
    </record>

    <record id="hop_item_wise_report_action" model="ir.actions.act_window">
        <field name="name">Item Wise Report</field>
        <field name="res_model">hop.item.wise.report</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>