<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hop_item_wise_report_wizard_view_form" model="ir.ui.view">
        <field name="name">hop.item.wise.report.wizard.view.form</field>
        <field name="model">hop.item.wise.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Item Wise Report">
                <sheet>
                    <group>
                        <group>
                            <field name="from_date" />
                            <field name="item_ids" options="{'no_quick_create':true}" widget="many2many_tags" />
                        </group>
                        <group>
                         <field name="to_date" />
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_print" string="Generate" type="object" class="oe_highlight" />
                    <button string="Cancel" class="oe_link oe_highlight" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_item_wise_report_wizard" model="ir.actions.act_window">
        <field name="name">Item Wise Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hop.item.wise.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
