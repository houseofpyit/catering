<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hop_name_get_report_wizard_view_form" model="ir.ui.view">
        <field name="name">hop.name.get.report.wizard.view.form</field>
        <field name="model">hop.name.get.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Name Fuction Print Report">
                <sheet>
                    <group>
                        <group>
                            <field name="recipes_selection" widget="radio" options="{'horizontal': true}" required="1"/>
                            <field name="fuction_name_id" options="{'no_quick_create':true}" widget="many2many_tags" attrs = "{'invisible': [('recipes_selection','=','manually')] }" />
                            <field name="language" required="1"/>
                        </group>
                        <group>
                            <field name="total" attrs = "{'invisible': [('recipes_selection','=','auto')] }" force_save="1"/>
                            <field name="count" readonly="1" attrs = "{'invisible': [('recipes_selection','=','manually')] }" force_save="1"/>
                            <field name="item_ids" widget="many2many_tags" attrs = "{'invisible': [('recipes_selection','=','auto')] }"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_print" string="Generate" type="object" class="oe_highlight" />
                    <button string="Cancel" class="oe_link oe_highlight" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_hop_name_get_report_wizard" model="ir.actions.act_window">
        <field name="name">Function Print Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hop.name.get.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
