<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hop_party_wise_report_wizard_view_form" model="ir.ui.view">
        <field name="name">hop.party.wise.report.wizard.view.form</field>
        <field name="model">hop.party.wise.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Party Wise Report">
                <sheet>
                    <group>
                        <group>
                            <field name="from_date" />
                            <field name="party_ids" options="{'no_quick_create':true}" widget="many2many_tags" required="1"/>
                            <!-- <field name="fuction_ids" options="{'no_quick_create':True,'no_create_edit':True,'no_open':True}" widget="many2many_tags"/> -->
                        </group>
                        <group>
                            <field name="to_date" />
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_print" string="Generate" type="object" class="oe_highlight" />                  
                    <button string="Cancel" class="oe_link oe_highlight" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_party_wise_report_wizard" model="ir.actions.act_window">
        <field name="name">Party Wise Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hop.party.wise.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
