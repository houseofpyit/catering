<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="purchesh_all_po_wizard_form" model="ir.ui.view">
        <field name="name">purchesh.all.po.wizard.form</field>
        <field name="model">purchesh.all.po.wizard</field>
        <field name="arch" type="xml">
            <form >
                <sheet>
                    <group>
                        <field name="date"/>
                        <field name="function_id" options="{'no_quick_create':true}" required="1"/>
                        <field name="purchase_order_ids" widget="many2many_tags" invisible="1"/>
                    </group>
                    <group>
                        <field name="language"  required="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_generate_po" string="Generate" type="object" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_purchesh_all_po_wizard" model="ir.actions.act_window">
        <field name="name">Print all Po</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchesh.all.po.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>