<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hop_vender_confirmation_from_wizard_view_form" model="ir.ui.view">
        <field name="name">hop.vender.confirmation.from.wizard.view.form</field>
        <field name="model">hop.vender.confirmation.from.wizard</field>
        <field name="arch" type="xml">
            <form string="Vendor Confirmation From Report">
                <sheet>
                    <group>
                        <group>
                            <field name="from_date" />
                        </group>
                        <group>
                            <field name="to_date" />
                            <field name="fuction_ids" options="{'no_quick_create':true}" widget="many2many_tags" required="1"/>
                            <field name="language" required="1"/>
                            <!-- <field name="to_date" /> -->
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_print" string="Generate" type="object" class="oe_highlight"  />
                    <button string="Cancel" class="oe_link oe_highlight" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_vender_confirmation_from_wizard" model="ir.actions.act_window">
        <field name="name">Vendor Confirmation From Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hop.vender.confirmation.from.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
