<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="gallerymaster_form" model="ir.ui.view">
        <field name="name">GalleryMaster</field>
        <field name="model">hop.gallery.master</field>
        <field name="arch" type="xml">

            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="type"/>
                        </group>
                        <group>
                            <field name="logo" widget="image" class="oe_avatar" nolabel="1"/>
                        </group>
                        
                    </group>
                    <notebook>
                        <page string="Menu">
                            <field name="menu_line_ids">
                                <tree editable="bottom">
                                    <field name="category_id" required="1" options="{'no_quick_create':true}"/>
                                    <field name="item_id" options="{'no_quick_create':true}" context="{'default_category_id': category_id}" domain="[('category_id','=',category_id)]"/>
                                    <field name="qty" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <group>
                        <field name="attachment_ids" widget='many2many_binary'/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_ids"/>
                </div>
            </form>

        </field>
    </record>

    <record id="gallerymaster_tree" model="ir.ui.view">
        <field name="name">GalleryMaster</field>
        <field name="model">hop.gallery.master</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="logo"/>
                <field name="type"/>
            </tree>
        </field>
    </record>

    <record id="gallerymaster_kanban" model="ir.ui.view">
        <field name="name">GalleryMaster</field>
        <field name="model">hop.gallery.master</field>
        <field name="arch" type="xml">
            <kanban >
                <field name="id" />
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_details oe_kanban_global_click o_kanban_record_has_image_fill">
                            <div class="o_kanban_image">
                                <img alt="Avatar" t-att-src="kanban_image('hop.gallery', 'logo',record.id.raw_value)"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <b>
                                        <field name="name"/>
                                    </b>
                                </strong>
                                <ul>
                                    <li>Type: <b>
                                        <field name="type"></field>
                                    </b>
                                </li>
                        </ul>
                    </div>
                </div>
            </t>
        </templates>
    </kanban>
</field>
</record>

<record id="action_gallery" model="ir.actions.act_window">
<field name="name">GalleryMaster</field>
<field name="res_model">hop.gallery.master</field>
<field name="view_mode">kanban,tree,form</field>
</record>

</odoo>