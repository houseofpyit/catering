<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hop_websit_category_view_form" model="ir.ui.view">
        <field name="name">hop.websit.category.view.form</field>
        <field name="model">hop.websit.category</field>
        <field name="arch" type="xml">
            <form string="Category Master">
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hop_websit_category_view_tree" model="ir.ui.view">
        <field name="name">hop.websit.category.view.tree</field>
        <field name="model">hop.websit.category</field>
        <field name="arch" type="xml">
            <tree string="Category Master">
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="hop_websit_category_action" model="ir.actions.act_window">
        <field name="name">Category Master</field>
        <field name="res_model">hop.websit.category</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>